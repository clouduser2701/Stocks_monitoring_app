@page
@model LoginModel



<div class="row">
    <h1>Login</h1>
    <section>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" type="search" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>*@
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log in</button>
                <input type="button" class="btn btn-primary" onclick="location.href='./Register';" value="Register" />
            </div>

            
        </form>
    </section>

    
</div>
<style>
    h1 {
        margin: 1px;
        text-align: center;
        font-weight: bold;
        width: 100%;
    }

    .row {
        background-color: white;
        color: #2292D9;
        width: 300px;
        height: 400px;
        position: absolute;
        z-index: 15;
        top: 50%;
        left: 50%;
        margin: -300px 0 0 -150px;
        font-weight: bold;
    }

    .btn {
        background-color: #2292D9;
        width: 100px;
        height: 40px;
        margin: 20px;
    }

    .form-control {
        background-color: powderblue;
        color: #2292D9;
        opacity: 0.8;
        border: 2px solid #2292D9;
        border-radius: 10px;
    }

        .form-control:focus {
            background-color: powderblue;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
